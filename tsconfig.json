{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2022",
    "module": "NodeNext",
    "lib": [
      "es2023"
    ],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test"
  ]
}